<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_796CF0"
    android:orientation="vertical"
    android:paddingTop="76dp">

    <com.oneone.framework.ui.widget.ZzHorizontalProgressBar
        android:id="@+id/frag_profile_gender_edit_pb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_3"
        app:zpb_bg_color="@color/single_flow_progress_bar_bg"
        app:zpb_max="12"
        app:zpb_padding="0dp"
        app:zpb_pb_color="@color/single_flow_progress_bar_cur_process_bg"
        app:zpb_progress="1"
        app:zpb_show_mode="rect" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/single_flow_content_bg_1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/input_data_content_inner_layout_1_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="94dp"
            android:text="@string/str_set_single_flow_page_i_am_tv"
            android:textColor="@color/color_white"
            android:textSize="@dimen/dimen_sp_24"
            android:textStyle="bold" />

        <LinearLayout

            android:id="@+id/frag_profile_gender_edit_ll_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_dp_46"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/input_data_content_inner_layout_1_radio_item_1_tv"
                    android:layout_width="100dp"
                    android:layout_height="46dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/selector_purple_white_radius_48"
                    android:drawablePadding="@dimen/dimen_dp_8"
                    android:drawableStart="@drawable/emoji_female_3"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dimen_dp_19"
                    android:tag="21"
                    android:text="@string/str_set_single_flow_page_girl_tv"
                    android:textColor="@color/color_selector_white_purple"
                    android:textSize="@dimen/dimen_sp_15" />

                <TextView
                    android:id="@+id/input_data_content_inner_layout_1_radio_item_2_tv"
                    android:layout_width="100dp"
                    android:layout_height="46dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/selector_purple_white_radius_48"
                    android:drawablePadding="@dimen/dimen_dp_8"
                    android:drawableStart="@drawable/emoji_female_2"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dimen_dp_19"
                    android:tag="22"
                    android:text="@string/str_set_single_flow_page_little_sister"
                    android:textColor="@color/color_selector_white_purple"
                    android:textSize="@dimen/dimen_sp_15" />

                <TextView
                    android:id="@+id/input_data_content_inner_layout_1_radio_item_3_tv"
                    android:layout_width="100dp"
                    android:layout_height="46dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/selector_purple_white_radius_48"
                    android:drawablePadding="@dimen/dimen_dp_8"
                    android:drawableStart="@drawable/emoji_female_1"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dimen_dp_19"
                    android:tag="23"
                    android:text="@string/str_set_single_flow_page_sister"
                    android:textColor="@color/color_selector_white_purple"
                    android:textSize="@dimen/dimen_sp_15" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_dp_17"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/input_data_content_inner_layout_1_radio_item_4_tv"
                    android:layout_width="100dp"
                    android:layout_height="46dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/selector_purple_white_radius_48"
                    android:drawablePadding="@dimen/dimen_dp_8"
                    android:drawableStart="@drawable/emoji_male_3"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dimen_dp_19"
                    android:tag="11"
                    android:text="@string/str_set_single_flow_page_fresh_meat"
                    android:textColor="@color/color_selector_white_purple"
                    android:textSize="@dimen/dimen_sp_15" />

                <TextView
                    android:id="@+id/input_data_content_inner_layout_1_radio_item_5_tv"
                    android:layout_width="100dp"
                    android:layout_height="46dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/selector_purple_white_radius_48"
                    android:drawablePadding="@dimen/dimen_dp_8"
                    android:drawableStart="@drawable/emoji_male_2"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dimen_dp_19"
                    android:tag="12"
                    android:text="@string/str_set_single_flow_page_little_brother"
                    android:textColor="@color/color_selector_white_purple"
                    android:textSize="@dimen/dimen_sp_15" />

                <TextView
                    android:id="@+id/input_data_content_inner_layout_1_radio_item_6_tv"
                    android:layout_width="100dp"
                    android:layout_height="46dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/selector_purple_white_radius_48"
                    android:drawablePadding="@dimen/dimen_dp_8"
                    android:drawableStart="@drawable/emoji_male_1"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dimen_dp_19"
                    android:tag="13"
                    android:text="@string/str_set_single_flow_page_brother"
                    android:textColor="@color/color_selector_white_purple"
                    android:textSize="@dimen/dimen_sp_15" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/step_1_confirm_btn"
            android:layout_width="190dp"
            android:layout_height="54dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="48dp"
            android:background="@drawable/shape_white_radius_40dp"
            android:gravity="center"
            android:text="@string/str_set_single_flow_page_confirm"
            android:textColor="@color/text_login_page_count_down"
            android:textSize="@dimen/dimen_sp_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="@string/str_set_single_flow_page_confirm_cannot_modify"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_sp_14" />
    </LinearLayout>
</LinearLayout>
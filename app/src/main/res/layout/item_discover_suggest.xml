<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/item_discover_suggest_border_layout"
        android:layout_width="wrap_content"
        android:layout_height="560dp"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_white_radius_5dp">

        <ImageView
            android:id="@+id/discover_item_title_iv"
            android:layout_width="169dp"
            android:layout_height="21dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:background="@drawable/discover_item_title_bg" />

        <TextView
            android:id="@+id/discover_item_page_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="12dp"
            android:layout_marginTop="20dp"
            android:textSize="14dp" />

        <RelativeLayout
            android:id="@+id/refresh_time_sign_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/discover_item_title_iv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/refresh_time_sign_tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_discover_page_refresh_time_sign_1"
                android:textColor="@color/text_gray_3"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/refresh_time_sign_tv_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@id/refresh_time_sign_tv_1"
                android:text="120"
                android:textColor="@color/text_blue_1"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/refresh_time_sign_tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/refresh_time_sign_tv_val"
                android:text="@string/str_discover_page_refresh_time_sign_2"
                android:textColor="@color/text_gray_3"
                android:textSize="12dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/last_item_type_1_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/refresh_time_sign_layout"
            android:visibility="gone">

            <TextView
                android:id="@+id/time_surplus_tag_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="51dp"
                android:text="@string/str_discover_page_last_item_time_surplus_tv_tag"
                android:textColor="@color/text_black_2"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/time_surplus_val_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/time_surplus_tag_tv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="36dp"
                android:textColor="@color/text_black_2"
                android:textSize="35dp" />

            <TextView
                android:id="@+id/next_time_suggest_desc_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/time_surplus_val_tv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="@color/text_blue_1"
                android:textSize="14dp" />

            <Button
                android:id="@+id/last_item_type_1_confirm_btn"
                android:layout_width="222dp"
                android:layout_height="48dp"
                android:layout_below="@id/next_time_suggest_desc_tv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="36dp"
                android:background="@drawable/shap_blue_bg"
                android:gravity="center"
                android:text="@string/str_discover_page_last_item_type_1_confirm_btn_1_text"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/last_item_type_1_bottom_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/last_item_type_2_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/refresh_time_sign_layout"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/last_item_type_2_tv_1"
                android:layout_width="240dp"
                android:layout_height="128dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="36dp"
                android:layout_marginTop="50dp"
                android:lineSpacingExtra="4dp"
                android:text="@string/str_discover_page_last_item_type_2_text_1"
                android:textColor="@color/text_black_2"
                android:textSize="14dp"
                android:background="@drawable/no_suggest_tv_bg"
                />

            <!--<TextView
                android:id="@+id/last_item_type_2_tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="36dp"
                android:layout_marginTop="18dp"
                android:layout_below="@id/last_item_type_2_tv_1"
                android:text="@string/str_discover_page_last_item_type_2_text_2"
                />-->

            <RelativeLayout
                android:id="@+id/last_item_type_2_bottom_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/color_6FA539"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="98dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="66dp"
                    android:text="@string/str_discover_page_last_item_type_2_text_5"
                    />
                <Button
                    android:id="@+id/suggest_search_btn"
                    android:layout_width="222dp"
                    android:layout_height="48dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="134dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/shape_white_radius_40dp"
                    android:textSize="14dp"
                    android:textColor="@color/color_6667FD"
                    android:text="@string/str_discover_page_last_item_type_2_text_3"
                    />

                <Button
                    android:id="@+id/see_time_line_btn"
                    android:layout_width="222dp"
                    android:layout_height="48dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/suggest_search_btn"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/shape_white_radius_40dp"
                    android:textSize="14dp"
                    android:textColor="@color/color_6667FD"
                    android:text="@string/str_discover_page_last_item_type_2_text_4"
                    />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/suggest_user_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/refresh_time_sign_layout"
            android:visibility="gone">

            <ImageView
                android:id="@+id/discover_item_photo_iv"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                />

            <RelativeLayout
                android:id="@+id/feeling_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/discover_item_photo_iv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-39dp">

                <ImageView
                    android:id="@+id/not_like_iv"
                    android:layout_width="78dp"
                    android:layout_height="78dp"
                    android:background="@drawable/ic_no_feel_normal" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/like_iv"
                    android:layout_width="78dp"
                    android:layout_height="78dp"
                    android:layout_toRightOf="@id/not_like_iv"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/user_info_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/discover_item_photo_iv"
                android:layout_alignRight="@id/discover_item_photo_iv"
                android:layout_below="@id/discover_item_photo_iv"
                android:layout_marginTop="32dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/user_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_black_2"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/user_age_and_place_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:textColor="@color/text_blue_1"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/same_percent_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/same_percent_iv"
                        android:layout_width="16dp"
                        android:layout_height="14dp"
                        android:background="@drawable/item_discover_suggest_same_percent_bg" />

                    <TextView
                        android:id="@+id/same_percent_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/text_blue_1"
                        android:textSize="14dp" />

                    <ImageView
                        android:id="@+id/intersection_iv"
                        android:layout_width="22dp"
                        android:layout_height="14dp"
                        android:background="@drawable/ic_match_score"
                        android:layout_marginLeft="10dp"
                        />

                    <TextView
                        android:id="@+id/intersection_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/text_blue_1"
                        android:textSize="14dp" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/user_tag_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/discover_item_photo_iv"
                android:layout_alignRight="@id/discover_item_photo_iv"
                android:layout_below="@id/user_info_layout"
                android:orientation="vertical"
                android:visibility="gone"
                >
                <TextView
                    android:id="@+id/user_tag_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/text_black_2"
                    android:layout_marginTop="15dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/character_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/discover_item_photo_iv"
                android:layout_alignRight="@id/discover_item_photo_iv"
                android:layout_below="@id/user_info_layout"
                android:orientation="vertical"
                android:visibility="gone"
                >
                <TextView
                    android:id="@+id/character_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/text_black_2"
                    android:layout_marginTop="15dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/whos_suggest_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/discover_item_photo_iv"
                android:layout_alignRight="@id/discover_item_photo_iv"
                android:layout_below="@id/user_info_layout"
                android:orientation="vertical"
                android:visibility="gone"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <!--<TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_discover_page_whos_suggest_left_text"
                        android:textColor="@color/blue"
                        android:textSize="13dp" />-->

                    <TextView
                        android:id="@+id/whos_suggest_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="@color/blue"
                        android:textSize="13dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_discover_page_whos_suggest_right_text"
                        android:textColor="@color/text_black_2"
                        android:textSize="13dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/matcher_said_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:lineSpacingExtra="4dp"
                    android:textColor="@color/text_black_2"
                    android:textSize="14dp" />

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>
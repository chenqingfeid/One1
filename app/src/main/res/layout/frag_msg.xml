<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@color/color_white"
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="64dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:id="@+id/talk_title_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/talk_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="33dp"
                    android:textSize="14dp"
                    android:textColor="@color/blue"
                    android:text="@string/str_my_msg_title_talk_text"
                    />

                <ImageView
                    android:id="@+id/talk_title_point_iv"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/blue_point_bg"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="26dp"
                    android:visibility="gone"
                    />
                
                <View
                    android:id="@+id/talk_indicator"
                    android:layout_width="28dp"
                    android:layout_height="2dp"
                    android:background="@drawable/shap_blue_bg"
                    android:layout_below="@id/talk_title_tv"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="33dp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/interaction_title_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/interaction_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="33dp"
                    android:textSize="14dp"
                    android:textColor="@color/text_blue_1"
                    android:text="@string/str_my_msg_title_interaction_text"
                    />

                <ImageView
                    android:id="@+id/interaction_title_point_iv"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/blue_point_bg"
                    android:layout_toRightOf="@id/interaction_title_tv"
                    android:layout_marginLeft="2dp"
                    android:visibility="gone"
                    />

                <View
                    android:id="@+id/interaction_indicator"
                    android:layout_width="28dp"
                    android:layout_height="2dp"
                    android:background="@drawable/shap_blue_bg"
                    android:layout_below="@id/interaction_title_tv"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="33dp"
                    android:visibility="gone"
                    />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/msg_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_layout"
        />
    <View
        android:id="@+id/frag_msg_test_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</RelativeLayout>

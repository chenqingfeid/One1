<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_796CF0"
    android:orientation="vertical"
    android:paddingTop="76dp">

    <com.oneone.framework.ui.widget.ZzHorizontalProgressBar
        android:id="@+id/frag_profile_avatar_edit_pb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_3"
        app:zpb_bg_color="@color/single_flow_progress_bar_bg"
        app:zpb_max="2"
        app:zpb_padding="0dp"
        app:zpb_pb_color="@color/single_flow_progress_bar_cur_process_bg"
        app:zpb_progress="2"
        app:zpb_show_mode="rect" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/color_a76cf0"
        android:visibility="visible">

        <TextView
            android:id="@+id/frag_profile_avatar_edit_tv_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="73dp"
            android:text="@string/str_set_avatar_tip"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <FrameLayout
            android:id="@+id/frag_profile_avatar_edit_fl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/frag_profile_avatar_edit_tv_tag"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="27dp">

            <com.oneone.framework.ui.widget.CircleImageView
                android:id="@+id/frag_profile_avatar_edit_iv_avatar"
                android:layout_width="155dp"
                android:layout_height="155dp"
                android:gravity="center"
                android:src="@color/color_975BEC"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/frag_profile_avatar_edit_tv_avatar_tip"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_upload"
                android:textColor="@color/color_white_trans_50"
                />
        </FrameLayout>

        <Button
            android:id="@+id/frag_profile_avatar_edit_btn_confirm"
            android:layout_width="200dp"
            android:layout_height="54dp"
            android:layout_below="@id/frag_profile_avatar_edit_fl"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:background="@drawable/shape_white_radius_40dp"
            android:gravity="center"
            android:text="@string/str_set_single_flow_page_confirm"
            android:textColor="@color/color_a76cf0"
            android:textSize="16sp" />
    </RelativeLayout>
</LinearLayout>
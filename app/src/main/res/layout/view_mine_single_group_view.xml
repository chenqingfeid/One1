<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="115dp"
    android:background="@color/white">
    <ImageView
        android:id="@+id/dog_iv"
        android:layout_width="29dp"
        android:layout_height="28dp"
        android:background="@drawable/ic_single"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:layout_marginStart="22dp"
        />

    <TextView
        android:id="@+id/my_single_group_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dog_iv"
        android:layout_marginTop="8dp"
        android:layout_alignStart="@id/dog_iv"
        android:textSize="14sp"
        android:textColor="@color/text_black_2"
        android:text="@string/str_mine_page_single_my_single_group_text"
        />

    <TextView
        android:id="@+id/person_count_tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/dog_iv"
        android:layout_below="@id/my_single_group_title_tv"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:textColor="@color/text_black_2"
        />
    <TextView
        android:id="@+id/person_count_tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/person_count_tv_1"
        android:layout_alignTop="@id/person_count_tv_1"
        android:layout_marginStart="4dp"
        android:textSize="13sp"
        android:textColor="@color/text_blue_1"
        android:text="@string/str_mine_page_single_my_single_group_person_unit_text"
        />
    <TextView
        android:id="@+id/person_count_tv_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/person_count_tv_2"
        android:layout_alignTop="@id/person_count_tv_1"
        android:layout_marginStart="8dp"
        android:textSize="11sp"
        android:textColor="@color/color_F5ABA1"
        />
    
    <LinearLayout
        android:id="@+id/my_single_user_photo_layout"
        android:layout_width="66dp"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="18dp"
        >

    </LinearLayout>

    <TextView
        android:id="@+id/share_more_single_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/my_single_user_photo_layout"
        android:layout_below="@id/my_single_user_photo_layout"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        android:textColor="@color/blue"
        android:text="@string/str_mine_page_single_my_single_group_share_more_single_text"
        />
</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout
        android:background="@color/color_white"
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="64dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:id="@+id/my_like_title_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/my_like_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="14dp"
                    android:textColor="@color/blue"
                    android:text="@string/str_like_relation_title_my_like"
                    />

                <ImageView
                    android:id="@+id/my_like_title_point_iv"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/blue_point_bg"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="26dp"
                    android:visibility="gone"
                    />

                <View
                    android:id="@+id/my_like_indicator"
                    android:layout_width="55dp"
                    android:layout_height="2dp"
                    android:background="@drawable/shap_blue_bg"
                    android:layout_below="@id/my_like_title_tv"
                    android:layout_centerHorizontal="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/like_eacher_title_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/like_eacher_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="14dp"
                    android:textColor="@color/text_blue_1"
                    android:text="@string/str_like_relation_title_like_each_other"
                    />

                <ImageView
                    android:id="@+id/like_eacher_title_point_iv"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/blue_point_bg"
                    android:layout_toRightOf="@id/interaction_title_tv"
                    android:layout_marginLeft="2dp"
                    android:visibility="gone"
                    />

                <View
                    android:id="@+id/like_eacher_indicator"
                    android:layout_width="55dp"
                    android:layout_height="2dp"
                    android:background="@drawable/shap_blue_bg"
                    android:layout_below="@id/like_eacher_title_tv"
                    android:layout_centerHorizontal="true"
                    android:visibility="gone"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/like_me_title_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/like_me_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="14dp"
                    android:textColor="@color/text_blue_1"
                    android:text="@string/str_like_relation_title_like_me"
                    />

                <ImageView
                    android:id="@+id/like_me_title_point_iv"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/blue_point_bg"
                    android:layout_toRightOf="@id/interaction_title_tv"
                    android:layout_marginLeft="2dp"
                    android:visibility="gone"
                    />

                <View
                    android:id="@+id/like_me_indicator"
                    android:layout_width="55dp"
                    android:layout_height="2dp"
                    android:background="@drawable/shap_blue_bg"
                    android:layout_below="@id/like_me_title_tv"
                    android:layout_centerHorizontal="true"
                    android:visibility="gone"
                    />
            </RelativeLayout>
        </LinearLayout>
        
        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="10dp"
            android:layout_height="16dp"
            android:background="@drawable/page_title_back_btn_bg_2"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="13dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="14dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_line"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_layout"
        android:background="@color/white"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/like_relation_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_layout"
        />

</RelativeLayout>
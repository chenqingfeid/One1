<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingTop="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="@string/str_match_person_person_set_title"
            android:textColor="@color/text_black_2"
            android:textSize="20dp" />

        <RelativeLayout
            android:id="@+id/input_data_content_inner_layout_1_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_data_content_inner_layout_1_tv1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/input_data_content_inner_layout_1_radio_line_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/input_data_content_inner_layout_1_radio_item_1"
                    android:layout_width="98dp"
                    android:layout_height="45dp"
                    android:background="@drawable/shape_white_radius_40dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <ImageView
                            android:id="@+id/input_data_content_inner_layout_1_radio_item_1_iv"
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/emoji_female_3" />

                        <TextView
                            android:id="@+id/input_data_content_inner_layout_1_radio_item_1_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="8dp"
                            android:layout_toRightOf="@id/input_data_content_inner_layout_1_radio_item_1_iv"
                            android:text="@string/str_set_single_flow_page_girl_tv"
                            android:textColor="@color/text_black_2"
                            android:textSize="15dp" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/input_data_content_inner_layout_1_radio_item_2"
                    android:layout_width="98dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="14dp"
                    android:background="@drawable/shape_white_radius_40dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <ImageView
                            android:id="@+id/input_data_content_inner_layout_1_radio_item_2_iv"
                            android:layout_width="16.1dp"
                            android:layout_height="19dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/emoji_female_2" />

                        <TextView
                            android:id="@+id/input_data_content_inner_layout_1_radio_item_2_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="4dp"
                            android:layout_toRightOf="@id/input_data_content_inner_layout_1_radio_item_2_iv"
                            android:text="@string/str_set_single_flow_page_little_sister"
                            android:textColor="@color/text_black_2"
                            android:textSize="15dp" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/input_data_content_inner_layout_1_radio_item_3"
                    android:layout_width="98dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="14dp"
                    android:background="@drawable/shape_white_radius_40dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <ImageView
                            android:id="@+id/input_data_content_inner_layout_1_radio_item_3_iv"
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/emoji_female_1" />

                        <TextView
                            android:id="@+id/input_data_content_inner_layout_1_radio_item_3_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@id/input_data_content_inner_layout_1_radio_item_3_iv"
                            android:text="@string/str_set_single_flow_page_sister"
                            android:textColor="@color/text_black_2"
                            android:textSize="15dp" />
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/input_data_content_inner_layout_1_radio_line_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/input_data_content_inner_layout_1_radio_line_1"
                android:layout_marginTop="17dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/input_data_content_inner_layout_1_radio_item_4"
                    android:layout_width="98dp"
                    android:layout_height="45dp"
                    android:background="@drawable/shape_white_radius_40dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <ImageView
                            android:id="@+id/input_data_content_inner_layout_1_radio_item_4_iv"
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/emoji_male_3" />

                        <TextView
                            android:id="@+id/input_data_content_inner_layout_1_radio_item_4_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="8dp"
                            android:layout_toRightOf="@id/input_data_content_inner_layout_1_radio_item_4_iv"
                            android:text="@string/str_set_single_flow_page_fresh_meat"
                            android:textColor="@color/text_black_2"
                            android:textSize="15dp" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/input_data_content_inner_layout_1_radio_item_5"
                    android:layout_width="98dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="14dp"
                    android:background="@drawable/shape_white_radius_40dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <ImageView
                            android:id="@+id/input_data_content_inner_layout_1_radio_item_5_iv"
                            android:layout_width="16.3dp"
                            android:layout_height="19dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/emoji_male_2" />

                        <TextView
                            android:id="@+id/input_data_content_inner_layout_1_radio_item_5_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="4dp"
                            android:layout_toRightOf="@id/input_data_content_inner_layout_1_radio_item_5_iv"
                            android:text="@string/str_set_single_flow_page_little_brother"
                            android:textColor="@color/text_black_2"
                            android:textSize="15dp" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/input_data_content_inner_layout_1_radio_item_6"
                    android:layout_width="98dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="14dp"
                    android:background="@drawable/shape_white_radius_40dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <ImageView
                            android:id="@+id/input_data_content_inner_layout_1_radio_item_6_iv"
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/emoji_male_1" />

                        <TextView
                            android:id="@+id/input_data_content_inner_layout_1_radio_item_6_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="7dp"
                            android:layout_toRightOf="@id/input_data_content_inner_layout_1_radio_item_6_iv"
                            android:text="@string/str_set_single_flow_page_brother"
                            android:textColor="@color/text_black_2"
                            android:textSize="15dp" />
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:text="@string/str_match_person_usually_living_title"
            android:textColor="@color/text_black_2"
            android:textSize="20dp"
            android:visibility="gone"
            />

        <RelativeLayout
            android:id="@+id/person_set_city_layout"
            android:layout_width="200dp"
            android:layout_height="54dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/shape_white_radius_40dp"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/person_set_city_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/str_set_single_flow_page_city"
                android:textColor="@color/text_blue_1"
                android:textSize="14dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/confirm_btn"
                android:layout_width="190dp"
                android:layout_height="54dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="12dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shap_blue_bg"
                android:gravity="center"
                android:text="@string/str_match_person_confirm_btn_text"
                android:textColor="@color/white"
                android:textSize="16dp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
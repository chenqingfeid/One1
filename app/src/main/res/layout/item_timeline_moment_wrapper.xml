<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/item_timeline_moment_wrapper_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_60"
        android:background="@color/color_796CF0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_dp_12"
        android:layout_marginStart="@dimen/dimen_dp_12"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_timeline_post_error_tip"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_dp_33"
            android:layout_marginBottom="@dimen/dimen_dp_12"
            android:background="@drawable/shape_radius_4dp_f5aba1"
            android:drawableEnd="@drawable/ic_arrow_right_white"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/dimen_dp_20"
            android:paddingStart="@dimen/dimen_dp_13"
            android:text="@string/str_timeline_send_error_tip"
            android:textColor="@color/white"
            android:visibility="gone" />

        <include layout="@layout/item_timeline_moment" />
    </LinearLayout>
</FrameLayout>
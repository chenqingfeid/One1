<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_796CF0"
    android:paddingTop="@dimen/dimen_dp_76"
    >

    <com.oneone.framework.ui.widget.ZzHorizontalProgressBar
        android:id="@+id/frag_profile_gender_edit_pb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_3"
        app:zpb_bg_color="@color/single_flow_progress_bar_bg"
        app:zpb_max="12"
        app:zpb_padding="0dp"
        app:zpb_pb_color="@color/single_flow_progress_bar_cur_process_bg"
        app:zpb_progress="3"
        app:zpb_show_mode="rect" />

    <RelativeLayout
        android:id="@+id/input_data_content_inner_layout_3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/single_flow_content_bg_3"
        android:visibility="visible">

        <TextView
            android:id="@+id/step_3_tag_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="73dp"
            android:text="@string/str_set_single_flow_page_usually_live_in"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_sp_16" />

        <RelativeLayout
            android:id="@+id/step_3_city_layout"
            android:layout_width="200dp"
            android:layout_height="54dp"
            android:layout_below="@id/step_3_tag_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="27dp"
            android:background="@drawable/shape_black_transparent_26_bg">

            <TextView
                android:id="@+id/step_3_city_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/str_set_single_flow_page_city"
                android:textColor="#66ffffff"
                android:textSize="@dimen/dimen_sp_14" />
        </RelativeLayout>

        <Button
            android:id="@+id/step_3_confirm_btn"
            android:layout_width="200dp"
            android:layout_height="54dp"
            android:layout_below="@id/step_3_city_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp"
            android:background="@drawable/shape_white_radius_40dp"
            android:gravity="center"
            android:text="@string/str_set_single_flow_page_confirm"
            android:textColor="@color/single_flow_content_bg_3"
            android:textSize="@dimen/dimen_sp_16" />
    </RelativeLayout>
</LinearLayout>
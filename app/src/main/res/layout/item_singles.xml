<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_radius_6dp"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="@dimen/dimen_dp_18"
    android:layout_marginTop="@dimen/dimen_dp_10"
    android:layout_marginEnd="@dimen/dimen_dp_23"
    android:layout_marginStart="@dimen/dimen_dp_23">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_dp_10">

        <com.oneone.widget.AvatarImageView
            android:id="@+id/item_singles_iv_avatar"
            android:layout_width="@dimen/dimen_dp_51"
            android:layout_height="@dimen/dimen_dp_51"
            android:src="@drawable/default_avatar_matcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/dimen_dp_11"
            android:layout_toEndOf="@+id/item_singles_iv_avatar"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_singles_tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/color_black"
                android:textSize="@dimen/dimen_sp_14"
                android:textStyle="bold"
                tools:text="Fei" />

            <TextView
                android:id="@+id/item_singles_tv_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_7E94BB"
                android:textSize="@dimen/dimen_sp_14"
                tools:text="女，26，北京 "
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/item_singles_iv_new_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_state_new" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_singles_tv_matcher_said"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_dp_13"
            android:textColor="@color/color_3E4F6C"
            android:maxLines="4"
            android:ellipsize="end"
            android:textSize="@dimen/dimen_sp_14"
            tools:text="一个性格开朗，温柔贤惠，有爱心的90后，聪明努力，热爱生活，积极乐观，高质有趣多才多艺。爱旅游爱健身，会做可口的饭菜，热爱一切新鲜的事物。" />

        <RelativeLayout
            android:id="@+id/item_singles_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_singles_tv_matcher_said"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_singles_tv_wechat_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_7E94BB"
                android:textSize="@dimen/dimen_sp_12"
                tools:text="微信昵称：cuicuisha" />

            <TextView
                android:id="@+id/item_singles_tv_relationship"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="@color/color_F5ABA1"
                android:textSize="@dimen/dimen_sp_12"
                tools:text="朋友" />
        </RelativeLayout>

        <TextView
            android:id="@+id/item_singles_tv_matcher_relations_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/item_singles_rl"
            android:layout_marginTop="@dimen/dimen_dp_13"
            android:textColor="@color/color_6667FD"
            android:textSize="@dimen/dimen_sp_12"
            android:text="@string/str_singles_edit_matcher_relations" />

    </RelativeLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="13.7dp"
        android:paddingLeft="13dp"
        android:paddingRight="7dp">

        <RelativeLayout
            android:id="@+id/user_relation_photo_layout"
            android:layout_width="83dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/user_relation_photo_layout">

            <TextView
                android:id="@+id/user_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="有趣的Hugo"
                android:textColor="@color/text_black_2"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/user_info_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_name_tv"
                android:layout_marginTop="1dp"
                android:text="外向开朗，随和充满正能量"
                android:textColor="@color/text_blue_1"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/like_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/user_name_tv"
                android:text="2小时前"
                android:textColor="@color/text_gray_1"
                android:textSize="12dp" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/content_layout"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="13dp"
        android:background="@color/color_EAEBEF" />
</RelativeLayout>
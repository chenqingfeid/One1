<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="13dp"
    >
    <RelativeLayout
        android:id="@+id/user_photo_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        >
        <View
            android:id="@+id/new_point_view"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_centerVertical="true"
            android:background="@drawable/blue_point_bg"
            android:layout_marginLeft="6dp"
            />
        <RelativeLayout
            android:id="@+id/user_relation_photo_layout"
            android:layout_width="69dp"
            android:layout_height="40dp"
            android:layout_marginLeft="18dp"
            >

        </RelativeLayout>
        <com.oneone.widget.AvatarImageView
            android:id="@+id/user_photo_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="18dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/user_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingRight="18dp"
        android:layout_toRightOf="@id/user_photo_layout"
        android:layout_marginLeft="13dp"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/user_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="14dp"
                android:textColor="@color/text_black_2"
                android:text="aa"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:id="@+id/matcher_icon"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_toRightOf="@id/user_name_tv"
                android:layout_marginLeft="8dp"
                android:background="@drawable/icon_matcher_bg"
                android:layout_centerVertical="true"
                android:visibility="gone"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/user_base_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textSize="13dp"
            android:textColor="@color/text_black_3"
            />
        <LinearLayout
            android:id="@+id/user_relation_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/match_score_iv"
                android:layout_width="19dp"
                android:layout_height="12dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/item_discover_suggest_intersection_bg"
                />

            <TextView
                android:id="@+id/user_interaction_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/text_blue_1"
                />

        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/user_info_layout"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/user_photo_layout"
        android:layout_marginLeft="13dp"
        android:background="@color/gray_line"
        />
</RelativeLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp">

            <TextView
                android:id="@+id/user_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="23dp"
                android:text="@string/str_report_user_name"
                android:textColor="@color/color_3E4F6C"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="18dp"
                android:text="@string/str_report_classify"
                android:textColor="@color/color_3E4F6C"
                android:textSize="14dp" />

            <RelativeLayout
                android:id="@+id/report_classify_layout"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_white_radius_4dp">

                <TextView
                    android:id="@+id/report_classify_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="19dp"
                    android:text="@string/str_report_classify_hint"
                    android:textColor="@color/color_C4CFE1"
                    android:textSize="13dp" />

                <ImageView
                    android:layout_width="9dp"
                    android:layout_height="7dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/blue_down_arrow" />
            </RelativeLayout>

            <TextView
                android:id="@+id/detail_desc_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="28dp"
                android:text="@string/str_report_detail_desc"
                android:textColor="@color/color_3E4F6C"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/detail_desc_et"
                android:layout_width="match_parent"
                android:layout_height="132dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_white_radius_4dp"
                android:gravity="left|top"
                android:hint="@string/str_report_detail_desc_hint"
                android:maxLength="300"
                android:paddingLeft="19dp"
                android:paddingRight="19dp"
                android:paddingTop="13dp"
                android:textColorHint="@color/color_C4CFE1"
                android:textColor="@color/text_black"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/report_pic_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="28dp"
                android:text="@string/str_report_pic_upload"
                android:textColor="@color/color_3E4F6C"
                android:textSize="14dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/report_upload_pic_list_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"/>

                    <ImageView
                        android:id="@+id/report_upload_pic_select_pic_btn_iv"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/report_upload_pic_btn" />
                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/connect_method_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="28dp"
                android:text="@string/str_report_connect_method"
                android:textColor="@color/color_3E4F6C"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/connect_method_et"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:singleLine="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_white_radius_4dp"
                android:gravity="center_vertical"
                android:hint="@string/str_report_connect_method_hint"
                android:paddingLeft="19dp"
                android:textColorHint="@color/color_C4CFE1"
                android:textColor="@color/text_black"
                android:textSize="13dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp">

                <Button
                    android:id="@+id/commit_btn"
                    android:layout_width="221dp"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/shap_blue_bg"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:text="@string/commit_text"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="60dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/dimen_dp_23"
    android:layout_marginStart="@dimen/dimen_dp_23"
    android:layout_marginTop="@dimen/dimen_dp_10"
    android:background="@drawable/shape_white_radius_6dp"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="@dimen/dimen_dp_18">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_dp_10">

        <com.oneone.widget.AvatarImageView
            android:id="@+id/item_matcher_iv_avatar"
            android:layout_width="@dimen/dimen_dp_51"
            android:layout_height="@dimen/dimen_dp_51"
            android:src="@drawable/default_avatar_matcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/dimen_dp_11"
            android:layout_toEndOf="@+id/item_matcher_iv_avatar"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_matcher_tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/color_black"
                android:textSize="@dimen/dimen_sp_14"
                android:textStyle="bold"
                tools:text="Fei" />

            <TextView
                android:id="@+id/item_matcher_tv_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_7E94BB"
                android:textSize="@dimen/dimen_sp_14"
                tools:text="女，26，北京 " />
        </LinearLayout>

        <ImageView
            android:id="@+id/item_matcher_iv_new_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_state_new" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_matcher_tv_matcher_said"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_dp_13"
            android:textColor="@color/color_3E4F6C"
            android:textSize="@dimen/dimen_sp_14"
            tools:text="一个性格开朗，温柔贤惠，有爱心的90后，聪明努力，热爱生活，积极乐观，高质有趣多才多艺。爱旅游爱健身，会做可口的饭菜，热爱一切新鲜的事物。" />


        <RelativeLayout
            android:id="@+id/item_matcher_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_matcher_tv_matcher_said"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_matcher_tv_wechat_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_7E94BB"
                android:textSize="@dimen/dimen_sp_12"
                tools:text="微信昵称：cuicuisha" />

            <TextView
                android:id="@+id/item_matcher_tv_relationship"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="@color/color_F5ABA1"
                android:textSize="@dimen/dimen_sp_12"
                tools:text="朋友" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_below="@+id/item_matcher_rl"
            android:id="@+id/item_matcher_rl_matcher_relation_edit_invite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:visibility="visible">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentTop="true"
                android:background="@color/gray_line_2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="14.5dp"
                android:text="@string/str_my_matcher_group_not_write_impression_title_text"
                android:textColor="@color/text_blue_1"
                android:textSize="14dp" />

            <Button
                android:id="@+id/invite_ta_to_write_btn"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="41.5dp"
                android:background="@drawable/shap_blue_bg_2"
                android:gravity="center"
                android:text="@string/str_my_matcher_group_invite_ta_to_write_text"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <ImageView
                android:layout_width="103dp"
                android:layout_height="62dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="17.5dp"
                android:background="@drawable/my_matcher_group_not_write_impression_icon" />
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>

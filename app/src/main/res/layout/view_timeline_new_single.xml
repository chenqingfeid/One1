<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginBottom="@dimen/dimen_dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/view_timeline_new_single_tv_display_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_timeline_new_single_ll_info"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/shape_border_edf3fc_1px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_dp_12">

        <ImageView
            android:id="@+id/view_timeline_new_single_iv_avatar"
            android:layout_width="@dimen/dimen_dp_38"
            android:layout_height="@dimen/dimen_dp_38"
            android:src="@drawable/default_avatar_single" />

        <TextView
            android:id="@+id/view_timeline_new_single_tv_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_dp_11"
            android:textColor="@color/black"
            tools:text="大熊" />

        <TextView
            android:visibility="gone"
            android:id="@+id/view_timeline_new_single_tv_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_dp_11"
            android:textColor="@color/color_7E94BB"
            tools:text="25,北京，创意总监" />
    </LinearLayout>
</LinearLayout>
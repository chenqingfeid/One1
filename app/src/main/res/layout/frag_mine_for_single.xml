<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.oneone.modules.main.me.view.MineSummary
                android:id="@+id/frag_mine_for_single_mine_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" />

            <com.oneone.modules.main.me.view.MineSingleDataCompletion
                android:id="@+id/frag_mine_for_single_mine_single_data_completion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp" />

            <com.oneone.modules.main.me.view.MineSingleGroup
                android:id="@+id/frag_mine_for_single_mine_single_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp" />

            <com.oneone.modules.main.me.view.MineSingleStoryAndMatcher
                android:id="@+id/frag_mine_for_single_mine_story_and_matcher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp" />

            <com.oneone.modules.main.me.view.MineLineItem
                android:id="@+id/frag_mine_for_single_mine_love_qa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp" />

            <com.oneone.modules.main.me.view.MineLineItem
                android:id="@+id/frag_mine_for_single_mine_dog_food"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.oneone.modules.main.me.view.MineLineItem
                android:id="@+id/frag_mine_for_single_mine_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp" />

            <com.oneone.modules.main.me.view.MineLineItem
                android:id="@+id/frag_mine_for_single_mine_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="65dp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

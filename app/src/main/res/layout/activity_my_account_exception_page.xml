<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    >
    <ImageView
        android:id="@+id/user_photo_iv"
        android:layout_width="89dp"
        android:layout_height="89dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="93dp"
        />

    <TextView
        android:id="@+id/user_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="@color/account_exception_black_text"
        android:layout_below="@id/user_photo_iv"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/account_exception_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="13dp"
        android:textColor="@color/account_exception_blue_text"
        android:layout_below="@id/user_name_tv"
        android:layout_marginTop="26dp"
        android:layout_centerHorizontal="true"
        android:text="@string/str_my_account_exception_page_exception_notice_text"
        />
    <Button
        android:id="@+id/connect_custom_service_btn"
        android:layout_width="221dp"
        android:layout_height="45dp"
        android:layout_below="@id/account_exception_tv"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shap_blue_bg"
        android:textSize="14dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="@string/str_my_account_exception_page_connect_custom_service"
        />
</RelativeLayout>
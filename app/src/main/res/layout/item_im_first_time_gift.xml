<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    >

    <RelativeLayout
        android:layout_width="71dp"
        android:layout_height="95dp">

        <RelativeLayout
            android:id="@+id/gift_select_layout"
            android:layout_width="71dp"
            android:layout_height="71dp"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/gift_select_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shap_stoke_blue_circle_bg"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/gift_bg_iv"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <TextView
            android:id="@+id/gift_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/color_7E94BB"
            android:visibility="gone"
            android:textSize="12dp" />
    </RelativeLayout>
</RelativeLayout>
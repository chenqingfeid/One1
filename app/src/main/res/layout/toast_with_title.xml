<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
	<RelativeLayout 
	    android:id="@+id/toast_title_layout"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:paddingTop="14.4dp"
	    android:paddingBottom="14.4dp"
	    android:paddingLeft="17.3dp"
	    android:paddingRight="17.3dp"
	    android:background="@drawable/shape_toast_background"
	    >
	    <TextView 
	        android:id="@+id/tvTitleToast"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:textSize="15.8dp"
	        android:textColor="@color/white"
	        />
	    
	    <TextView 
	        android:id="@+id/tvTextToast"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/tvTitleToast"
	        android:layout_marginTop="14.4dp"
	        android:textSize="15.8dp"
	        android:textColor="@color/white"
	        />
	</RelativeLayout>
	
</RelativeLayout>
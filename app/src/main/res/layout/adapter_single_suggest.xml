<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <com.oneone.widget.AvatarImageView
        android:id="@+id/user_photo_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/user_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/user_photo_iv"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/user_photo_iv"
        android:textColor="@color/black"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/user_into_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_name_tv"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@id/user_photo_iv"
        android:textColor="@color/text_wx_auth_page_tag_1"
        android:textSize="12dp" />
</RelativeLayout>
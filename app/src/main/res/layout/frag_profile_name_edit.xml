<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="76dp"
    android:background="@color/color_796CF0"
    >

    <com.oneone.framework.ui.widget.ZzHorizontalProgressBar
        android:id="@+id/frag_profile_gender_edit_pb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_dp_3"
        app:zpb_bg_color="@color/single_flow_progress_bar_bg"
        app:zpb_max="12"
        app:zpb_padding="0dp"
        app:zpb_pb_color="@color/single_flow_progress_bar_cur_process_bg"
        app:zpb_progress="2"
        app:zpb_show_mode="rect" />

    <RelativeLayout
        android:id="@+id/input_data_content_inner_layout_2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/single_flow_content_bg_2"
        android:visibility="visible">

        <TextView
            android:id="@+id/step_2_tag_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="73dp"
            android:text="@string/str_set_single_flow_page_want_to_be_called"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/step_2_nickname_et"
            android:layout_width="200dp"
            android:layout_height="54dp"
            android:maxLength="13"
            android:layout_below="@id/step_2_tag_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="27dp"
            android:background="@drawable/shape_black_transparent_26_bg"
            android:gravity="center"
            android:hint="@string/str_set_single_flow_page_nickname"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="#66ffffff"
            android:textCursorDrawable="@null"
            android:textSize="14sp" />

        <Button
            android:id="@+id/step_2_confirm_btn"
            android:layout_width="200dp"
            android:layout_height="54dp"
            android:layout_below="@id/step_2_nickname_et"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp"
            android:background="@drawable/shape_white_radius_40dp"
            android:gravity="center"
            android:text="@string/str_set_single_flow_page_confirm"
            android:textColor="@color/color_67A1FF"
            android:textSize="16sp" />
    </RelativeLayout>
</LinearLayout>
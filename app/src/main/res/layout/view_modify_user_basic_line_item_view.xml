<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="66dp"
    android:background="@color/white">
    <TextView
        android:id="@+id/item_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textColor="@color/text_black_2"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="23dp"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/item_val_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:maxLength="14"
        android:ellipsize="end"
        android:textSize="14dp"
        android:textColor="@color/text_blue_1"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="48dp"
        />

    <EditText
        android:id="@+id/item_val_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textCursorDrawable="@drawable/color_cursor"
        android:gravity="right"
        android:textSize="14dp"
        android:textColorHint="@color/text_gray_1"
        android:textColor="@color/text_blue_1"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="48dp"
        android:background="@color/transparent"
        />

    <ImageView
        android:id="@+id/item_person_setting_tag_iv"
        android:layout_width="19dp"
        android:layout_height="23dp"
        android:layout_toLeftOf="@id/item_val_tv"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/item_right_arrow"
        android:layout_width="8dp"
        android:layout_height="14dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="23dp"
        android:layout_centerVertical="true"
        android:background="@drawable/view_mine_line_item_right_arrow_bg"
        />
</RelativeLayout>
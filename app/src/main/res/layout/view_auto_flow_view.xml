<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.oneone.framework.ui.widget.FlowLayout
            android:id="@+id/view_auto_flow_view_fl_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flChildSpacing="@dimen/dimen_dp_8"
            app:flFlow="true"
            app:flRowSpacing="@dimen/dimen_dp_8" />

        <TextView
            android:id="@+id/view_auto_flow_view_btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_dp_8"
            android:background="@drawable/shape_black_transparent_radius_48dp"
            android:paddingBottom="@dimen/dimen_dp_12"
            android:paddingEnd="@dimen/dimen_dp_22"
            android:paddingStart="@dimen/dimen_dp_22"
            android:paddingTop="@dimen/dimen_dp_12"
            android:text="@string/str_activity_matcher_relation_set"
            android:textColor="@color/color_selector_white_purple"
            android:textSize="@dimen/dimen_sp_14" />
    </LinearLayout>
</ScrollView>
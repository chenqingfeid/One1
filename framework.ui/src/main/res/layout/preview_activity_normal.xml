<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:id="@+id/rl_preview_layout"
    android:orientation="vertical">


    <com.oneone.framework.ui.imagepicker.view.ViewPagerFixed
        android:id="@+id/preview_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <TextView
        android:id="@+id/preview_view_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_dp_40"
        android:text="1 / 1"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/dimen_sp_15"/>

    <LinearLayout
        android:id="@+id/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
        <include layout="@layout/layout_toolbar"/>
    </LinearLayout>

</RelativeLayout>